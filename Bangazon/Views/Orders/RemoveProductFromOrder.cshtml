@model Bangazon.Models.OrderProduct

@{
    ViewData["Title"] = "RemoveProductFromOrder";
}



<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Title)
        </dd class>
    </dl>
    
    <form asp-action="RemoveProductFromOrder">
        <input type="hidden" asp-for="OrderProductId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Cart">Back to Cart</a>
    </form>
</div>
