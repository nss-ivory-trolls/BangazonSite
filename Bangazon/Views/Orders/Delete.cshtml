@model Bangazon.Models.Order

@{
    ViewData["Title"] = "Delete";
}


<h3>Are you sure you want to delete order @Html.DisplayFor(model => model.OrderId)?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
    </dl>
    <hr/>
        <h2>
            Products: 
        </h2>
        @foreach (var item in Model.OrderProducts)
        {
            <ul>
                <li>
                    @Html.DisplayFor(model => item.Product.Title)
                </li>
            </ul>

        }
            <form asp-action="Delete">
                <input type="hidden" asp-for="OrderId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> &nbsp; <a asp-action="Cart">Cancel</a>
            </form>

    
</div>
