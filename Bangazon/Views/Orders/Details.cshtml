@model Bangazon.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Order @Html.DisplayFor(model => model.OrderId)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateCompleted)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCompleted)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaymentType.AccountNumber)
        </dd>
    </dl>
        <h2>
            Products: 
        </h2>
        @foreach (var item in Model.OrderProducts)
        {
            <ul>
                <li>
                    @Html.DisplayFor(model => item.Product.Title)
                </li>
            </ul>

        }
    <div class="form-group">
        <input type="submit" value="Complete Order" class="btn btn-primary" />
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.OrderId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
